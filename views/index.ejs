
<%- include('./partials/head.ejs') %>


<body>
	<%- include('./partials/nav.ejs') %>
	<div class="blogs content">
		<h2>All Blogs</h2>

		<% if (blogs.length > 0 ) {  %>
		<% blogs.forEach(blog => { %>
			<a href="/blogs/<%= blog._id%>" class="single">
			<h3 class="title"><%= blog.title %></h3>
			</a>
			<h3 class="snippet"><%= blog.snippet %></h3>

		<% })%>
		<% } %>
	</div>
	<%- include('./partials/footer.ejs') %>
</body>


